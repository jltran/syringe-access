doctype
html
    head
        title Syringe Access
        link(rel="stylesheet", href="./assets/foundation.min.css")
        link(rel="stylesheet", href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css")
        link(href='http://fonts.googleapis.com/css?family=Lato:300,400|Merriweather:400,700' rel='stylesheet',type='text/css')
        link(rel="stylesheet", href="./style.css")
    
    body(ng-app="syringeApp")
            
        div.text-center
            i.fa.fa-ambulance.fa-4x#van 
            h1 Syringe Access
        div(ng-controller="SearchCtrl")
            .row
                input(type="text", ng-model="query")
            .row
                .small-12.medium-8.columns.map
                    map(center="37.802494, -122.257831",zoom="12")
                        marker(ng-repeat="location in pharmdata | filter: query", position="{{location.address}}")
                    //map(center="current-location", zoom="12")
                .small-12.medium-4.columns
                    div.pharmacydata(ng-repeat = "location in pharmdata | filter: query" ,ng-click="centerMap(location.address); highlightDiv($index)")
                        h3.lighten(ng-class="{'darken':$index==selectedIndex}") {{location.name | uppercase}}
                        h6
                            b {{location.address | uppercase}}
                        h6 
                            b {{location.phone}}
                        
                        blockquote.hidden.review(ng-class="{'show':$index==selectedIndex}")
                            .row
                                .small-4.columns
                                    .plain.text-right Reviewer:
                                .small-8.columns
                                    .plain.text-left {{location.review.reviewer}}
                                .small-4.columns
                                    .plain.text-right Stars:
                                .small-8.columns
                                    .plain.text-left {{location.review.stars}}
                                .small-4.columns
                                    .plain.text-right Impression:
                                .small-8.columns
                                    .plain.text-left {{location.review.impression}}

            div.text-center
                h1 Enter New Information Here
                form
                    .row
                        .large-12.columns
                            input(type="text",placeholder="Name",ng-model="data.name")
                            input(type="text",placeholder="Address",ng-model="data.address")
                            input(type="text",placeholder="Phone",ng-model="data.phone")
                            input(type="text",placeholder="Reviewer",ng-model="data.reviewer")
                            input(type="text",placeholder="Stars",ng-model="data.stars")
                            input(type="text",placeholder="Impression",ng-model="data.impression")
                            button(type="submit", ng-click="createPharm()") Add

        script(src="./assets/jquery.min.js")        
        script(src="./assets/angular.min.js")
        script(src="https://maps.google.com/maps/api/js")
        script(src="https://rawgit.com/allenhwkim/angularjs-google-maps/master/build/scripts/ng-map.min.js")
        script(src="./core.js")